{
  "name": "step-credit-backend",
  "version": "1.0.0",
  "description": "Backend services for Step Credit MVP",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start:gateway": "cd gateway && npm run dev",
    "start:step-tracker": "cd services/step-tracker && npm run dev",
    "start:credit-system": "cd services/credit-system && npm run dev",
    "start:payment": "cd services/payment && npm run dev",
    "start:all": "concurrently \"npm run start:gateway\" \"npm run start:step-tracker\" \"npm run start:credit-system\" \"npm run start:payment\"",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "docker:build": "docker build -t step-credit-backend .",
    "docker:run": "docker run -p 3000:3000 step-credit-backend"
  },
  "keywords": [
    "steps",
    "fitness",
    "mobile",
    "microservices",
    "huawei-cloud"
  ],
  "author": "Step Credit Team",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1691.0",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "google-auth-library": "^10.1.0",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "rate-limiter-flexible": "^4.0.1",
    "redis": "^4.6.11",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.4",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
